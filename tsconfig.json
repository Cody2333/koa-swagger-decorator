{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "target": "es6",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2017"],
    "pretty": true,
    "declaration": true,
    "paths": {
      "*": [
        "node_modules/*",
        "lib/types/*"
      ]
    },
    "types": [
      "jest"
    ]
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules"
]
}
